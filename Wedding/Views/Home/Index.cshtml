@if (ViewBag.Guests != null)
{
    <section id="news" class="page news page-section remove-pad-bottom silver-bg">


        <!-- inner-section:starts -->
        <section class="inner-section promo-text">
            <div class="container">
                <div class="row">
                    <article class="col-md-8 col-md-offset-2 text-center animated" data-fx="fadeInDown">
                        <h3 class="dark"><span>Invitados</span></h3>
                        <div class="liner color-bg"></div>
                        <p class="dark">En este QR se listaron @ViewBag.Guests.Count invitados. <i>Click para confirmar asistencia.</i></p>
                    </article>
                </div>
            </div>
        </section>
        <!-- inner-section:ends -->
        <!-- inner-section:starts -->
        <section class="inner-section team-wrap add-top-half pad-bottom">
            <div class="container">
                <div class="row">
                    @foreach (Guest guest in ViewBag.Guests)
                    {

                        <article class="col-md-6 text-left">
                            <div>
                                <div class="news-post white-bg text-left">
                                    <h6 class="dark"><b>@guest.User</b></h6>
                                    <div class="liner color-bg"></div>
                                    <br />
                                    <span class="badge"><i>En espera de confirmacion...</i></span>
                                    <br />
                                    <hr />
                                    <a class="btn btn-block btn-odin btn-odin-color">Confirmar Asistencia</a>    
                                </div>
                            </div>
                        </article>
                    }
                </div>
                @if (_peers.Count != 0)
                {
                    <div class="row add-top-quarter">
                        <article class="col-md-6 col-md-offset-3 text-left">
                            <div class="news-post white-bg text-left">
                                 <h6 class="dark">Niños contemplados.</h6>
                                 <div class="liner color-bg"></div>
                                 <h3 class="dark">Cantidad limite: <b>@_kids.First().Quantity</b></h3>
                            </div>
                        </article>
                    </div>
                }
                @if (_kids.Count != 0)
                {
                    <div class="row add-top-quarter">
                        <article class="col-md-6 col-md-offset-3 text-left">
                            <div class="news-post white-bg text-left">
                                 <h6 class="dark">Acompañantes contemplados.</h6>
                                 <div class="liner color-bg"></div>
                                 <h3 class="dark">Cantidad limite: <b>@_peers.First().Quantity</b></h3>
                            </div>
                        </article>
                    </div>
                }
            </div>
        </section>
        <!-- inner-section:ends -->


    </section>
}
